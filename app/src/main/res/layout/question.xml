<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_pink"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:foregroundGravity="center"
            app:srcCompat="@android:drawable/ic_lock_silent_mode" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:progressTint="#4d4d4d"
            android:thumb="@android:drawable/presence_online"
            android:thumbTint="@android:color/background_dark" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />
    </LinearLayout>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/ic_media_pause"
        android:onClick="playBtnClick" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/questionAnswerGroup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/questionAnswer0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/black"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="RadioButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="32sp" />

        <RadioButton
            android:id="@+id/questionAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:buttonTint="@android:color/black"
            android:paddingTop="10dp"
            android:text="RadioButton"
            android:textSize="32sp" />

        <RadioButton
            android:id="@+id/questionAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:buttonTint="@android:color/black"
            android:paddingTop="10dp"
            android:text="RadioButton"
            android:textSize="32sp" />

        <RadioButton
            android:id="@+id/questionAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:buttonTint="@android:color/black"
            android:paddingTop="10dp"
            android:text="RadioButton"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/reset"
                style="@android:style/Widget.Holo.Light.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/stat_notify_sync" />

            <ImageButton
                    android:id="@+id/questionForward"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1" android:src="@android:drawable/ic_media_play"/>
        </LinearLayout>
    </RadioGroup>
</LinearLayout>