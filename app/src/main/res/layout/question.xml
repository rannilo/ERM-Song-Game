<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ic_bg_pink"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_marginTop="30dp"
    />
    <Button android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/playBtn"
            android:background="@android:drawable/ic_media_play"
            android:layout_marginTop="40dp"
            android:onClick="playBtnClick"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/questionAnswerGroup"
                android:layout_width="fill_parent"
                android:layout_height="222dp"
                android:orientation="vertical" android:layout_marginRight="20dp" android:layout_marginLeft="20dp">

        <RadioButton
                android:id="@+id/questionAnswer0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="32sp"/>

        <RadioButton
                android:id="@+id/questionAnswer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textSize="32sp"/>

        <RadioButton
                android:id="@+id/questionAnswer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textSize="32sp"/>

        <RadioButton
                android:id="@+id/questionAnswer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textSize="32sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/reset"
                    style="@android:style/Widget.Holo.Light.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_rotate"/>

            <ImageButton
                    android:id="@+id/questionForward"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_media_play"/>
        </LinearLayout>
    </RadioGroup>
</LinearLayout>